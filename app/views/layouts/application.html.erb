<!DOCTYPE html>
<html>
  <head>
    <title>BOOKERS3</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <header class="navbar navbar-inverse">
    <div class="container">
      <nav class="nav navbar-nav navbar-left">
      <span class="header-title glyphicon glyphicon-book">Bookers</span>
      </nav>
    <nav>
      <ul class="nav navber-nav navbar-right">
  		<% if user_signed_in? %>
        		<li class="icon">
                      <%= link_to " Home", user_path(current_user.id), class: " glyphicon glyphicon-home text-muted" %>

        		</li>
            <li class="icon">
                      <%= link_to " Users", users_path, class: " glyphicon glyphicon-user text-muted" %>

        		</li>
            <li class="icon">
                      <%= link_to " Books", books_path, class: " icon-color glyphicon glyphicon-book text-muted" %>

        		</li>
            <li class="icon">
                      <%= link_to" logout", destroy_user_session_path,method: :delete, class: " glyphicon glyphicon-log-out text-muted" %>

        		</li>
        		<% else %>
            <li class="icon">
                      <%= link_to " Home", root_path, class: " glyphicon glyphicon-home text-muted" %>

        		</li>
            <li class="icon">
                      <%= link_to " About", about_path, class: " glyphicon glyphicon-link text-muted" %>

        		</li>
            <li class="icon">
                      <%= link_to " sign up", new_user_registration_path, class: " glyphicon glyphicon-edit text-muted" %>

        		</li>
            <li class="icon">
                      <%= link_to " login", new_user_session_path, class: " glyphicon glyphicon-log-in text-muted" %>

        		</li>
  		<% end %>
     </ul>
    </nav>
   </div>
</header>


    <%= yield %>
  </body>
</html>
  <footer>
  <div class='container'>
    <div class='row'>
      <div class='col-xs-3 col-xs-offset-9'>
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>
</footer>






