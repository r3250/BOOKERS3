<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<h1>Editing Book</h1>
			<%= form_for(@book) do |f| %>
				<label>Titel</label>
				  <div class="row">
						<div class="col-xs-12">
					    <%= f.text_field :title, class: "form-control" %>
						</div>
				  </div>
				  <label>Opinion</label>
			    <div class="row">
					   <div class="col-xs-12">
						<%= f.text_area :opinion, class: "form-control" %>
				       </div>
				</div>
				<br>
				  <div class="row">
					<div class="col-xs-12">
				<%= f.submit "Update Book", class: "btn btn-primary btn-block  btn-md" %>
				</div>
				</div>
				<br>
				<%= link_to "Show", book_path(@book.id), class: "text-muted" %>  |
				<%= link_to "Back", books_path, class: "text-muted" %>
			<% end %>
		</div>
	</div>
</div>