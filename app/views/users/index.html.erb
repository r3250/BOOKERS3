<div class="container">
 <div class="row">
	<div class="col-xs-3">
		<%= render 'users/list', user: current_user %>
		<%= render 'books/list', book: @book %>
	</div>
		<h1>Users</h1>
   <div class="col-xs-9">
   <table class="table">
	<thead>
		<tr>
			<th>Image</th>
			<th>name</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @users.each do |user| %>
			<tr>
			   <td><%= attachment_image_tag user, :image, :fill, 40, 40, format: 'jpg', fallback: 'noimage2.jpeg' %></td>
			   <td><%= user.name %></td>
			   <td><%= link_to "Show", user_path(user.id), class: "text-muted" %></td>
			</tr>
        <% end %>
    </tbody>
	</table>
	</div>
 </div>
</div>




