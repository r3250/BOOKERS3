<div class="container">
	<div class="row">
		<div class="col-lg-3">
			<%= render 'users/list', user: @user %>
			<%= render 'books/list', book: @book %>
		</div>

		<div class="col-lg-9">
		     <h1>Books</h1>

		<table class="table table-hover table-inverse">

				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
					</tr>
				</thead>


				<tbody>
					<% @books.each do |book| %>
					    <tr>
					        <td><%= link_to user_path(book.user.id) do %>
							<%= attachment_image_tag book.user, :image, :fill, 40, 40, format: 'jpg', fallback: 'noimage2.jpeg' %></td>
							<% end %>
						    <td><%= link_to book.title, book_path(book.id), class: "text-muted" %></td>
							<td><%= book.opinion %></td>
						</tr>
				　　<% end %>
				</tbody>
			</table>
		 </div>
　　 </div>
</div>




